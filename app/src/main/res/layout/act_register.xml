<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <!-- 注册第1步 ,账号和密码 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/register_step1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/register_username"
                android:layout_width="fill_parent"
                style="@style/edit_text"
                android:hint="用户名（只能由英文字母和数字组成）："
                android:inputType="text" />

            <EditText
                android:id="@+id/register_nickname"
                android:layout_width="fill_parent"
                style="@style/edit_text"
                android:hint="昵名："
                android:inputType="text" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="fill_parent"
                style="@style/edit_text"
                android:hint="邮箱："
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/register_pwd"
                android:layout_width="match_parent"
                style="@style/edit_text"
                android:hint="密码："
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_pwd2"
                android:layout_width="fill_parent"
                style="@style/edit_text"
                android:hint="再次输入密码："
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edt_register_verify"
                    android:layout_width="0dp"
                    style="@style/edit_text"
                    android:layout_weight="1"
                    android:hint="@string/input_verify"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/img_register_verify"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/defaut_input_height"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/register_btn_reg1"
                style="@style/register_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/defaut_btn_height"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue2white"
                android:text="@string/next_step" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>