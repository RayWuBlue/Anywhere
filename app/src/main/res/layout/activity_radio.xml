<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/radio_sender_school"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:layout_height="45dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/radio_sender_name"
                    style="@style/edit_text"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:ems="8"
                    android:hint="我的名字：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:background="@color/white"
                android:layout_marginTop="10dp" >

                <Spinner
                    android:id="@+id/radio_receiver_school"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:layout_height="45dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/radio_receiver_name"
                    style="@style/edit_text"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:ems="8"
                    android:hint="Ta的名字：" />
            </LinearLayout>

            <EditText
                android:id="@+id/radio_sender_time"
                style="@style/edit_text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="8"
                android:hint="时 间：" />

            <EditText
                android:id="@+id/radio_music"
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="14"
                android:hint="歌 曲：" />

            <EditText
                android:id="@+id/radio_bless"
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="14"
                android:hint="祝 福："
                android:lines="7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:background="@color/white"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/radio_code_input"
                    style="@style/edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:ems="8"
                    android:hint="验证码：" />

                <TextView
                    android:id="@+id/radio_code_output"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/radio_submit"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_blue_button"
                android:text="提交"
                android:textColor="@color/blue2white"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>